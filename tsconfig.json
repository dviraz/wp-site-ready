{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx", "scripts/**/*.mjs", "tests/**/*.ts", "js/**/*.js"],
  "exclude": ["node_modules", "playwright-report", "test-results"]
}